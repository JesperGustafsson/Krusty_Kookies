<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<GridPane fx:controller="gui.BookingTab" 
    xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
    styleClass="root">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>
    
    <Text id="welcome-text" text="View Pallets" 
         GridPane.columnIndex="0" GridPane.rowIndex="0"
        GridPane.columnSpan="2"/>
 
    <Label text="Cookie Type:"
        GridPane.columnIndex="0" GridPane.rowIndex="1"/>
 
    <Label fx:id="cType"
        GridPane.columnIndex="1" GridPane.rowIndex="1"/>
         
    <Label text="Amount of Pallets:"
        GridPane.columnIndex="0" GridPane.rowIndex="2"/>
 
    <Label fx:id="pAmount"
        GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            
    <Label text="Delivery Address:"
        GridPane.columnIndex="0" GridPane.rowIndex="3"/>
 
    <Label fx:id="dAddress"
        GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    
    <TextField fx:id="searchID"
    	GridPane.columnIndex="0" GridPane.rowIndex="4"/>     
         
    <HBox spacing="10" alignment="bottom_right" 
        GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button text="Search Pallet"     
        onAction="#searchButtonAction"/>
    </HBox>

    <Text fx:id="actiontarget"
        GridPane.columnIndex="1" GridPane.rowIndex="6"/>
        
    <stylesheets>
      <URL value="@login.css" />
    </stylesheets>

</GridPane>
